{
  "kind": "collectionType",
  "collectionName": "product_variants",
  "info": {
    "singularName": "product-variant",
    "pluralName": "product-variants",
    "displayName": "Product Variant",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "unit_price": {
      "type": "float"
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "product_variants"
    },
    "is_default": {
      "type": "boolean"
    },
    "stock": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "units_per_stock": {
      "type": "integer",
      "required": false,
      "default": 1,
      "min": 1
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "weight": {
      "type": "decimal"
    },
    "weight_unit": {
      "type": "enumeration",
      "enum": [
        "oz",
        "fl oz"
      ]
    },
    "sku": {
      "type": "enumeration",
      "enum": [
        "SM-DRY-2-OZ",
        "SM-DRY-4-OZ",
        "SM-DRY-8-OZ"
      ]
    },
    "package_dimensions_unit": {
      "type": "enumeration",
      "enum": [
        "in",
        "cm",
        "ft"
      ]
    },
    "package_dimensions": {
      "type": "enumeration",
      "enum": [
        "W8xL12xH4",
        "W8xL12xH8"
      ]
    }
  }
}

{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "videos": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "videos"
      ]
    },
    "weight": {
      "type": "decimal"
    },
    "units": {
      "type": "enumeration",
      "enum": [
        "oz",
        "Fl oz"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Gel",
        "Dry",
        "Clothing",
        "Accessory"
      ]
    },
    "certifications": {
      "type": "text"
    },
    "countryOfOrigin": {
      "type": "string"
    },
    "packageDimensions": {
      "type": "string"
    },
    "sku": {
      "type": "string"
    },
    "batchNumber": {
      "type": "string"
    },
    "upc": {
      "type": "string"
    },
    "expirationDate": {
      "type": "date"
    },
    "tipsForStorage": {
      "type": "text"
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "product_variants": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-variant.product-variant",
      "mappedBy": "product"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "variant_selection_text": {
      "type": "string",
      "default": "Select Variant"
    },
    "unit_property_selection_text": {
      "type": "string"
    },
    "product_properties": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-property.product-property",
      "mappedBy": "product"
    },
    "purchase_options": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::purchase-option.purchase-option",
      "inversedBy": "products"
    },
    "product_reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-review.product-review",
      "mappedBy": "product"
    },
    "rating": {
      "type": "decimal"
    },
    "healthBenefits": {
      "type": "richtext"
    },
    "ingredients": {
      "type": "richtext"
    },
    "description": {
      "type": "richtext"
    }
  }
}

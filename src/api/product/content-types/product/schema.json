{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "about": {
      "type": "text",
      "maxLength": 500
    },
    "price": {
      "type": "decimal",
      "min": 0
    },
    "createdAtDate": {
      "type": "datetime"
    },
    "stock": {
      "type": "integer",
      "min": 0
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "videos": {
      "allowedTypes": [
        "videos"
      ],
      "type": "media",
      "multiple": true
    },
    "weight": {
      "type": "decimal"
    },
    "units": {
      "type": "enumeration",
      "enum": [
        "oz",
        "Fl oz"
      ]
    },
    "quantity": {
      "type": "integer"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Gel",
        "Dry",
        "Clothing",
        "Accessory"
      ]
    },
    "certifications": {
      "type": "text"
    },
    "healthBenefits": {
      "type": "text"
    },
    "ingredients": {
      "type": "text"
    },
    "countryOfOrigin": {
      "type": "string"
    },
    "dimensions": {
      "type": "string"
    },
    "sku": {
      "type": "string"
    },
    "batchNumber": {
      "type": "string"
    },
    "upc": {
      "type": "string"
    },
    "expirationDate": {
      "type": "date"
    },
    "tipsForStorage": {
      "type": "text"
    }
  }
}
